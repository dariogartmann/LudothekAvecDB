@model Ludothek.App.Models.Game.GameListViewModel
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>Ludothek</h1>
    <p class="lead">Search our games below and press the button to rent one if you want it.</p>
    <p><a href="#allgames" class="btn btn-primary btn-lg">Explore &raquo;</a></p>
</div>

<div class="row" id="allgames">
    @foreach (var game in Model.Games) {
        <div class="col-md-4">
            <img src="https://unsplash.it/200/300/?random" />
            <h2>@game.Name</h2>
            <span>@game.EANNummer</span>
            <hr/>
            <a class="btn btn-primary" href="@Url.Action("Index", "Rental", new {gameId = game.SpielKeyGUID})">Rent game!</a>
        </div>
    }

</div>